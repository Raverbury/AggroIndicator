{
	"schemaVersion": 1,
	"id": "aggroindicator",
	"version": "${version}",
	"name": "Aggro Indicator",
	"description": "Display an alert icon above mobs that are aggroing onto you.",
	"authors": [
		"Raverbury"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT",
	"icon": "assets/aggroindicator/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
          "io.github.raverbury.aggroindicator.AggroIndicator"
		],
		"client": [
			"io.github.raverbury.aggroindicator.client.AggroIndicatorClient"
		]
	},
	"mixins": [
		"aggroindicator.mixins.json",
		{
			"config": "aggroindicator.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.10",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}